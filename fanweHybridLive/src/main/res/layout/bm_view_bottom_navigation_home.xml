<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="bottom"
             android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/height_bottom_navigation"
        android:background="#20888888"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_navigation"
        android:layout_gravity="bottom"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="1dp">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lv_tab_live_center"
            android:layout_width="@dimen/width_bottom_pic"
            android:layout_height="@dimen/height_bottom_navigation"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_live_center"
                android:layout_width="@dimen/width_bottom_pic"
                android:layout_height="@dimen/height_bottom_pic"
                android:background="@drawable/bm_selector_tab_home"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out" />

            <TextView
                android:id="@+id/tv_tab_live_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="首页"
                android:textSize="@dimen/base_textsize_10" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lv_tab_attention"
            android:layout_width="@dimen/width_bottom_pic"
            android:layout_height="@dimen/height_bottom_navigation"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_attention"
                android:layout_width="@dimen/width_bottom_pic"
                android:layout_height="@dimen/height_bottom_pic"
                android:background="@drawable/bm_selector_tab_attention"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out" />

            <TextView
                android:id="@+id/tv_tab_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="关注"
                android:textSize="@dimen/base_textsize_10" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lv_tab_live"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/icon_live"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lv_game_center"
            android:layout_width="@dimen/width_bottom_pic"
            android:layout_height="@dimen/height_bottom_navigation"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_game_center"
                android:layout_width="29dip"
                android:layout_height="27dip"
                android:background="@drawable/bm_selector_tab_game"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out" />

            <TextView
                android:id="@+id/tv_tab_game_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="游戏"
                android:textSize="@dimen/base_textsize_10" />
        </LinearLayout>
        <!-- android:background="@drawable/bm_selector_tab_game"-->
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lv_person_center"
            android:layout_width="@dimen/width_bottom_pic"
            android:layout_height="@dimen/height_bottom_navigation"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_person_center"
                android:layout_width="@dimen/width_bottom_pic"
                android:layout_height="@dimen/height_bottom_pic"
                android:background="@drawable/bm_selector_tab_person"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out" />

            <TextView
                android:id="@+id/tv_tab_person_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="我的"
                android:textSize="@dimen/base_textsize_10" />
        </LinearLayout>
        <!-- android:background="@drawable/bm_selector_tab_game"-->
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>